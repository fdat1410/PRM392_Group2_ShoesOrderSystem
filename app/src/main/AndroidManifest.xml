<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PRM392_Group2_ShoesOrderSystem"
        tools:targetApi="31">
        <activity
            android:name=".service.AddNewCategoryActivity"
            android:exported="false" />
        <activity
            android:name=".service.SellerDashboardActivity"
            android:exported="true"
            android:label="Seller Dashboard" />
        <activity
            android:name=".service.ViewOrderListActivity"
            android:exported="true"
            android:label="Order List" />
        <activity
            android:name=".service.UpdateShoesInformationActivity"
            android:exported="true"
            android:label="Update Shoes Information"
            android:parentActivityName=".service.SellerDashboardActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".service.SellerDashboardActivity" />
        </activity>
        <activity
            android:name=".service.AddNewShoesActivity"
            android:exported="true"
            android:label="Add New Shoes"
            android:parentActivityName=".service.SellerDashboardActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".service.SellerDashboardActivity" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>