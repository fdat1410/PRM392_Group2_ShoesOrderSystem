<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".activity.ViewShoesDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgShoe"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/txtShoeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shoes Name"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingTop="10dp" />

        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.500.000 VNĐ"
            android:textSize="18sp"
            android:textColor="@android:color/holo_red_dark"
            android:paddingTop="5dp" />

        <TextView
            android:id="@+id/txtDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:paddingTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Size"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingTop="10dp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="5"
            android:paddingTop="5dp">

            <RadioButton
                android:id="@+id/rbSize36"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="36" />

            <RadioButton
                android:id="@+id/rbSize37"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="37" />

            <RadioButton
                android:id="@+id/rbSize38"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="38" />

            <RadioButton
                android:id="@+id/rbSize39"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="39" />

            <RadioButton
                android:id="@+id/rbSize40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="40" />

            <RadioButton
                android:id="@+id/rbSize41"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="41" />

            <RadioButton
                android:id="@+id/rbSize42"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="42" />

            <RadioButton
                android:id="@+id/rbSize43"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="43" />

            <RadioButton
                android:id="@+id/rbSize44"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="44" />
        </GridLayout>

        <Button
            android:id="@+id/btnSizeGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Size Guide"
            android:backgroundTint="@android:color/white"
            android:textColor="@android:color/black"
            android:padding="10dp"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/btnAddToCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add to Cart"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/holo_red_dark"
            android:padding="12dp"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

</ScrollView>
