<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".service.customer.ViewProfileDetailActivity">


    <!-- Dịch phần nội dung xuống dưới header -->
    <TextView
        android:id="@+id/tvProfileTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Information"
        android:textColor="@android:color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--Avatar    -->
    <ImageView
        android:id="@+id/ivAvatar"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvProfileTitle" />

    <!--    FullName-->
    <TextView
        android:id="@+id/tvFullNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:text="Full Name"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@+id/ivAvatar"
        app:layout_constraintTop_toBottomOf="@id/tvProfileTitle" />

    <EditText
        android:id="@+id/etFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="Trần Trung Hậu"
        android:textColor="@android:color/black"
        android:textSize="17dp"
        app:layout_constraintLeft_toRightOf="@+id/ivAvatar"
        app:layout_constraintTop_toBottomOf="@id/tvFullNameLabel" />

    <TextView
        android:id="@+id/tvEmailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:text="Email"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@+id/ivAvatar"
        app:layout_constraintTop_toBottomOf="@id/etFullName" />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="trantrunghaunp@gmail.com"
        android:textSize="17dp"
        app:layout_constraintLeft_toRightOf="@+id/ivAvatar"
        app:layout_constraintTop_toBottomOf="@id/tvEmailLabel" />

    <!--    Phone-->
    <TextView
        android:id="@+id/tvPhoneLabel"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="Phone"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="@id/ivAvatar"
        app:layout_constraintTop_toBottomOf="@id/ivAvatar" />

    <EditText
        android:id="@+id/etPhone"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="012345678"
        android:textSize="17dp"
        app:layout_constraintLeft_toLeftOf="@id/ivAvatar"
        app:layout_constraintTop_toBottomOf="@id/tvPhoneLabel" />

    <!--    Role-->
    <TextView
        android:id="@+id/tvRoleLabel"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="35dp"
        android:text="Role"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@id/tvPhoneLabel"
        app:layout_constraintTop_toBottomOf="@id/ivAvatar" />

    <TextView
        android:id="@+id/tvRole"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="Customer"
        android:textSize="17dp"
        app:layout_constraintLeft_toRightOf="@id/tvPhoneLabel"
        app:layout_constraintTop_toBottomOf="@id/tvRoleLabel" />

    <!--    Gender-->
    <TextView
        android:id="@+id/tvGenderLabel"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Gender"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="@id/ivAvatar"
        app:layout_constraintTop_toBottomOf="@id/etPhone" />

    <Spinner
        android:id="@+id/spGender"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:textSize="17dp"
        app:layout_constraintLeft_toLeftOf="@id/ivAvatar"
        app:layout_constraintTop_toBottomOf="@id/tvGenderLabel" />

    <TextView
        android:id="@+id/tvDOBLabel"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="17dp"
        android:text="DOB"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@id/tvPhoneLabel"
        app:layout_constraintTop_toBottomOf="@id/tvRole" />

    <!--    DOB-->
    <EditText
        android:id="@+id/etDOB"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="7dp"
        android:text="20/10/2003"
        android:textSize="17dp"

        app:layout_constraintLeft_toRightOf="@id/tvPhoneLabel"
        app:layout_constraintTop_toBottomOf="@id/tvDOBLabel" />

    <!--    Address-->
    <TextView
        android:id="@+id/tvAddressLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Address"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/ivAvatar"
        app:layout_constraintTop_toBottomOf="@id/spGender" />

    <EditText
        android:id="@+id/etAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="Nghĩa Phong Nghĩa Hưng Nam Dinh"
        android:textSize="17dp"
        android:layout_marginLeft="13dp"
        app:layout_constraintTop_toBottomOf="@id/tvAddressLabel" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#D33636"
        android:text="Cancel"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="@+id/etAddress"
        app:layout_constraintTop_toBottomOf="@+id/etAddress" />

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#18C74C"
        android:text="Save"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@+id/btnCancel"
        app:layout_constraintTop_toBottomOf="@+id/etAddress" />
</androidx.constraintlayout.widget.ConstraintLayout>